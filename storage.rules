rules_version = '2';
// Firebase Storage Security Rules
// Allow authenticated users to read/write their own profile pictures

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can only read/write their own profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      // Allow read: anyone can read profile pictures
      allow read: if true;
      
      // Allow write: only the authenticated user can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      
      // Allow delete: only the authenticated user can delete their own pictures
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
